{
  "name": "darkforest-local",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "workspaces": [
    "packages/types",
    "packages/events",
    "packages/hashing",
    "packages/snarks",
    "packages/settings",
    "eth",
    "packages/contracts",
    "packages/constants",
    "packages/hexgen",
    "packages/serde",
    "packages/network",
    "packages/ui",
    "packages/gamelogic",
    "packages/procedural",
    "packages/renderer",
    "circuits",
    "client"
  ],
  "scripts": {
    "prepare": "yarn workspaces run prepare",
    "prebuild": "ls node_modules/.bin || ./node_modules/.bin/webpack --version",
    "build": "./node_modules/.bin/webpack --mode production",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "format": "yarn workspaces run format",
    "deploy:contracts": "yarn workspace eth hardhat:dev deploy --whitelist false",
    "deploy:client": "netlify build && netlify deploy",
    "deploy:client:prod": "netlify build && netlify deploy --prod",
    "wait:node": "wait-on tcp:8545",
    "start:client": "yarn workspace client start",
    "start:node": "yarn workspace eth hardhat:node",
    "start:game": "run-s wait:node deploy:contracts add:planets start:client",
    "add:planets": "yarn workspace eth hardhat:dev game:createPlanets",
    "start": "run-p start:node start:game start:client",
    "clean:workspaces": "yarn workspaces run clean",
    "clean:self": "del-cli node_modules/",
    "clean": "run-s clean:workspaces clean:self"
  },
  "devDependencies": {
    "del-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "wait-on": "^6.0.0"
  },
  "resolutions": {
    "ts-node": "^8.10.2",
    "concat-stream": "https://github.com/max-mapper/concat-stream"
  },
  "dependencies": {
    "@types/color": "^3.0.2",
    "@types/gl-matrix": "^3.2.0",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/lodash": "^4.14.160",
    "@types/prismjs": "^1.16.2",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/react-timeago": "^4.1.3",
    "@types/sortablejs": "^1.10.6",
    "@types/styled-components": "^5.1.15",
    "@types/uuid": "^8.3.0",
    "@types/webpack-env": "^1.16.3",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.5.1",
    "del-cli": "^4.0.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "html-webpack-plugin": "^5.5.0",
    "netlify-cli": "^3.8.5",
    "prettier": "^2.3.0",
    "raw-loader": "^4.0.2",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "typedoc": "^0.22.8",
    "typedoc-plugin-markdown": "3.11.x",
    "typescript": "4.4.x",
    "typescript-plugin-styled-components": "^2.0.0",
    "webpack": "^5.62.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  }
}
